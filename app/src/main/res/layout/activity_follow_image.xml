<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/activity_follow_image_iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/activity_follow_image_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/activity_follow_image_iv_image"
        android:text="Name"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/activity_follow_image_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/activity_follow_image_iv_image"
        android:layout_below="@+id/activity_follow_image_tv_name"
        android:text="Username"
        android:textStyle="bold"
        android:textSize="18px"/>
    <Button
        android:id="@+id/activity_follow_image_btn_button"
        android:layout_width="95dp"
        android:layout_height="32dp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="165dp"
        android:layout_toRightOf="@+id/activity_follow_image_tv_name"
        android:text="Following"
        android:textSize="26px"
        android:background="@drawable/rounded_corners"/>

</RelativeLayout>