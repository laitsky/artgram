<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back" />
        <TextView
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:text="Username"
            android:textSize="64px"
            android:textStyle="bold"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="8dp"
            android:text="Following"
            android:textSize="48px"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="8dp"
            android:text="Followers"
            android:textSize="48px"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <SearchView
            android:id="@+id/activity_following_sv_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:background="@color/whiteGrey" />
        <EditText
            android:id="@+id/activity_following_et_search"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/activity_following_sv_search"
            android:background="@color/whiteGrey"
            android:text="Search" />
        <GridView
            android:id="@+id/activity_profile_gv_people"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/activity_following_sv_search"
            android:verticalSpacing="10dp" />
    </RelativeLayout>

</LinearLayout>